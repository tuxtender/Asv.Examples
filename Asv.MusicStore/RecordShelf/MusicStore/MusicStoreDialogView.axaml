<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:musicStore="clr-namespace:Asv.MusicStore.RecordShelf.MusicStore"
			 mc:Ignorable="d"
			 d:DesignWidth="800"
			 d:DesignHeight="450"
			 x:CompileBindings="True"
			 x:Class="Asv.MusicStore.RecordShelf.MusicStore.MusicStoreDialogView"
			 x:DataType="musicStore:MusicStoreDialogViewModel">
	<Design.DataContext>
		<musicStore:MusicStoreDialogViewModel />
	</Design.DataContext> 
	<DockPanel>
		<StackPanel DockPanel.Dock="Top">
			<TextBox Watermark="Search for Albums...."
					 Text="{Binding SearchText.ModelValue.Value, Delay=400}" />
			<ProgressBar IsIndeterminate="True"
						 IsVisible="{Binding IsBusy}" />
		</StackPanel>
		<ListBox ItemsSource="{Binding SearchResults}"
				 SelectedItem="{Binding SelectedAlbum.Value}"
				 Background="Transparent"
				 Margin="0 20">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>

		</ListBox>
	</DockPanel>
</UserControl>